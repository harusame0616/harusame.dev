---
import { SiGithub, SiX, SiZenn } from "@icons-pack/react-simple-icons";

const snsList = [
  {
    name: "GitHub",
    icon: SiGithub,
    url: "https://github.com/harusame0616",
  },
  {
    name: "Zenn",
    icon: SiZenn,
    url: "https://zenn.dev/harusame0616",
  },
  {
    name: "X",
    icon: SiX,
    url: "https://x.com/harusame0616",
  },
];
---

<ul aria-label="sns" class="flex gap-4">
  {
    snsList.map((sns) => (
      <li class="h-4 w-4">
        <a href={sns.url}>
          <sns.icon
            role="img"
            aria-label={sns.name}
            width="100%"
            height="100%"
          />
        </a>
      </li>
    ))
  }
</ul>
